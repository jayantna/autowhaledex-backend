{
  "name": "vault-api-backend",
  "version": "1.0.0",
  "description": "Backend API for vault management",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "build": "mkdir -p dist && echo '<!DOCTYPE html><html><head><title>Vault API</title></head><body><h1>Vault API Backend</h1><p>API endpoints available at <a href=\"/api/health\">/api/*</a></p></body></html>' > dist/index.html",
    "dev": "NODE_ENV=development node server.js",
    "start": "NODE_ENV=production node server.js",
